<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    >
    <TextView
        android:id="@+id/tvComa"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal"
        android:textSize="50sp"
        android:text=","
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/tvCero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="0"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tvComa"/>
    <TextView
        android:id="@+id/tvIgual"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="="
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tvCero"/>
    <TextView
        android:id="@+id/tvUno"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="1"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_above="@id/tvComa"
        />
    <TextView
        android:id="@+id/tvDos"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="2"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvUno"
        android:layout_above="@id/tvCero"
        />
    <TextView
        android:id="@+id/tvTres"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="3"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvDos"
        android:layout_above="@id/tvIgual"
        />
    <TextView
        android:id="@+id/tvCuatro"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="4"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_above="@id/tvUno"
        />
    <TextView
        android:id="@+id/tvCinco"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="5"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvUno"
        android:layout_above="@id/tvDos"
        />
    <TextView
        android:id="@+id/tvSeis"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="6"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvCinco"
        android:layout_above="@id/tvTres"
        />
    <TextView
        android:id="@+id/tvSiete"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="7"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_above="@id/tvCuatro"
        />
    <TextView
        android:id="@+id/tvOcho"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="8"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvSiete"
        android:layout_above="@id/tvCinco"
        />
    <TextView
        android:id="@+id/tvNueve"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="50sp"
        android:text="9"
        android:textColor="@color/blanco"
        android:background="@color/plomoOscuro"
        android:layout_toRightOf="@id/tvOcho"
        android:layout_above="@id/tvSeis"
        />
    <LinearLayout
        android:id="@+id/operaciones"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvIgual"
        android:layout_below="@+id/tvResultado">
        <TextView
            android:id="@+id/tvCe"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30sp"
            android:text="CE"
            android:textColor="@color/blanco"
            android:background="@color/plomoClaro"
            android:layout_toRightOf="@id/tvOcho"
            android:layout_above="@id/tvSeis"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvDivision"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30sp"
            android:text="/"
            android:textColor="@color/blanco"
            android:background="@color/plomoClaro"
            android:layout_toRightOf="@id/tvOcho"
            android:layout_above="@id/tvSeis"
            />
        <TextView
            android:id="@+id/tvMultiplicacion"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30sp"
            android:text="x"
            android:textColor="@color/blanco"
            android:background="@color/plomoClaro"
            android:layout_toRightOf="@id/tvOcho"
            android:layout_above="@id/tvSeis"
            />
        <TextView
            android:id="@+id/tvResta"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30sp"
            android:text="-"
            android:textColor="@color/blanco"
            android:background="@color/plomoClaro"
            android:layout_toRightOf="@id/tvOcho"
            android:layout_above="@id/tvSeis"
            />
        <TextView
            android:id="@+id/tvSuma"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30sp"
            android:text="+"
            android:textColor="@color/blanco"
            android:background="@color/plomoClaro"
            android:layout_toRightOf="@id/tvOcho"
            android:layout_above="@id/tvSeis"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvSiete"
        android:gravity="right|center_vertical"
        android:padding="10dp"
        android:textSize="60dp"

        />
    <View
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/verde"
        android:layout_below="@id/tvResultado"
        android:layout_toRightOf="@id/operaciones"></View>

</RelativeLayout>